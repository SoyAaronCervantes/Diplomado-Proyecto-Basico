<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".view.ui.fragments.ScheduleDetailDialogFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Toolbar
          android:id="@+id/toolbarUbication"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/platzi_conf_2" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginScheduleContent"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="5dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/scheduleDetailMargin"
              android:background="@drawable/shape_paragraph"
              android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDetailConferenceSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scheduleDetailMargin"
                android:gravity="center_horizontal"
                android:text="Lugar PlatziConf"
                android:textColor="@color/primary_900"
                android:textSize="@dimen/scheduleTitle"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scheduleDetailMargin"
                android:drawablePadding="@dimen/scheduleDetailMargin"
                android:text="Direccion lugar"
                android:textColor="@color/primary_900"
                android:textSize="@dimen/sizeSubtitle"
                app:drawableLeftCompat="@drawable/ic_baseline_pin_drop_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_900" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scheduleDetailMargin"
                android:drawablePadding="@dimen/scheduleDetailMargin"
                android:text="Telefono lugar"
                android:textColor="@color/primary_900"
                android:textSize="@dimen/sizeSubtitle"
                app:drawableLeftCompat="@drawable/ic_baseline_phone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_900" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scheduleDetailMargin"
                android:drawablePadding="@dimen/scheduleDetailMargin"
                android:text="Pagina lugar"
                android:textColor="@color/primary_900"
                android:textSize="@dimen/sizeSubtitle"
                app:drawableLeftCompat="@drawable/ic_baseline_link" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_900" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

      </LinearLayout>
    </ScrollView>

  </FrameLayout>
</layout>