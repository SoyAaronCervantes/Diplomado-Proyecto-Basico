<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.HomeFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/spaceBetweenContentAndContainer">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spaceBetweenContentAndContainer"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/cardCornerRadius">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/shape_paragraph"
          android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageViewHomeFragment"
            android:contentDescription="@string/imageHomeFragment"
            android:src="@drawable/banner_platzi_conf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceBetweenContentAndContainer"
            android:layout_marginBottom="@dimen/spaceBetweenContentAndContainer"
            android:text="@string/inicio_frag_tv_que_es"
            android:textColor="@color/primary_900"
            android:textSize="@dimen/sizeTitle"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/inicio_frag_tv_que_es_resp"
            android:textColor="@color/primary_900"
            android:textSize="@dimen/sizeSubtitle" />


      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spaceBetweenContentAndContainer"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="5dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/shape_paragraph"
          android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageViewHomeFragment"
            android:contentDescription="@string/imageHomeFragment"
            android:scaleType="centerCrop"
            android:src="@drawable/platzi_conf_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceBetweenContentAndContainer"
            android:layout_marginBottom="@dimen/spaceBetweenContentAndContainer"
            android:text="@string/inicio_frag_tv_por_que"
            android:textColor="@color/primary_900"
            android:textSize="@dimen/sizeTitle"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/inicio_frag_tv_por_que_resp"
            android:textColor="@color/primary_900"
            android:textSize="@dimen/sizeSubtitle" />


      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="5dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/shape_paragraph"
          android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageViewHomeFragment"
            android:contentDescription="@string/imageHomeFragment"
            android:scaleType="centerCrop"
            android:src="@drawable/platzi_conf_3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceBetweenContentAndContainer"
            android:layout_marginBottom="@dimen/spaceBetweenContentAndContainer"
            android:text="@string/inicio_frag_tv_info"
            android:textColor="@color/primary_900"
            android:textSize="@dimen/sizeTitle"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/inicio_frag_tv_info_resp"
            android:textColor="@color/primary_900"
            android:textSize="@dimen/sizeSubtitle" />


      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>

</ScrollView>
